<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recycler_bg"
    tools:context=".AddUserFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginTop="24dp"
        android:background="#E6DFDF"
        android:paddingLeft="95sp"
        android:paddingRight="90sp"
        android:text="Update   User"
        android:textColor="#100000"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/user_updateid"
        android:layout_width="204dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edttext_add_bg"
        android:ems="10"
        android:hint="User Id"
        android:inputType="textPersonName"
        android:textColor="#0C0101"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/user_updateName"
        android:layout_width="211dp"
        android:layout_height="47dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edttext_add_bg"
        android:ems="10"
        android:hint=" Name"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_updateid" />

    <EditText
        android:id="@+id/user_updateEmail"
        android:layout_width="211dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edttext_add_bg"
        android:ems="10"
        android:hint=" Email"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_updateName" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/update_btn"
        android:layout_width="126dp"
        android:layout_height="35dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_add_bg"
        android:hint="update"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_updateEmail" />
</androidx.constraintlayout.widget.ConstraintLayout>