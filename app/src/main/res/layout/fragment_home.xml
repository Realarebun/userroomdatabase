<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/container_bg"
    tools:context=".HomeFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_button"
        android:layout_width="229dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/btn_add_bg"
        android:text="ADD USER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/view_button"
        android:layout_width="228dp"
        android:layout_height="52dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_view_bg"
        android:text="VIEW USER"
        app:layout_constraintEnd_toEndOf="@+id/add_button"
        app:layout_constraintTop_toBottomOf="@+id/add_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/edit_button"
        android:layout_width="226dp"
        android:layout_height="51dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/btn_edit_bg"
        android:text="UPDATE USER"
        app:layout_constraintEnd_toEndOf="@+id/view_button"
        app:layout_constraintTop_toBottomOf="@+id/view_button" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        android:layout_width="224dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_delete_bg"
        android:text="DELETE USER"
        app:layout_constraintEnd_toEndOf="@+id/edit_button"
        app:layout_constraintTop_toBottomOf="@+id/edit_button" />
</androidx.constraintlayout.widget.ConstraintLayout>